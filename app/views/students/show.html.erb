<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @student.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course) %>:</strong></dt>
  <dd><%= @student.course %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portfolio_url) %>:</strong></dt>
  <dd><%= @student.portfolio_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @student.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:github_url) %>:</strong></dt>
  <dd><%= @student.github_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:app_name) %>:</strong></dt>
  <dd><%= @student.app_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:app_url) %>:</strong></dt>
  <dd><%= @student.app_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rationale) %>:</strong></dt>
  <dd><%= @student.rationale %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tech_used) %>:</strong></dt>
  <dd><%= @student.tech_used %></dd>
  <dt><strong><%= model_class.human_attribute_name(:profile_pic_link) %>:</strong></dt>
  <dd><%= @student.profile_pic_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @student.city %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              students_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
